<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <color android:color="@android:color/transparent" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#80822A79"
                android:endColor="#B3FFFFFF"
                android:type="linear"
                android:angle="135"/>
            <gradient
                android:startColor="#B3FFFFFF"
                android:centerColor="#809C40B9"
                android:endColor="#80822A79"
                android:angle="90"/>
            <corners
                android:radius="0dp"/>

        </shape>

    </item>

</layer-list>



